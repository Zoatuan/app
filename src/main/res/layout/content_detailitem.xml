<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.eduard.myapplication.detailitem"
    tools:showIn="@layout/activity_detailitem">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:id="@+id/detail_TableLayout">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">

            <TextView
                android:id="@+id/detail_name"
                android:textSize="20sp"
                android:text="Name"/>

            <EditText
                android:id="@+id/detail_name_edit"
                android:text="EditName"
                />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">

            <TextView
                android:id="@+id/detail_description"
                android:textSize="20sp"
                android:layout_width="180dp"
                android:text="Description"/>

            <EditText
                android:id="@+id/detail_description_edit"
                android:layout_width="180dp"
                android:text="EditDescription"
                />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/detail_expiredate"
                android:textSize="20sp"
                android:text="ExpireDate"/>

            <EditText
                android:id="@+id/detail_expiredate_edit"
                android:text="EditExpireDate"
                />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/detail_expiretime"
                android:textSize="20sp"
                android:text="ExpireTime"/>

            <EditText
                android:id="@+id/detail_expiretime_edit"
                android:text="EditExpireTime"
                />

        </TableRow>

        <TableRow
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dip">

            <TextView
                android:id="@+id/detail_done"
                android:textSize="20sp"
                android:text="Done"/>

            <Switch android:id="@+id/detail_done_edit" />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/detail_favourite"
                android:textSize="20sp"
                android:text="Favourite"/>

            <TextView
                android:id="@+id/detail_favourite_edit"
                android:text=""
                />

        </TableRow>
        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/detail_contacts"
                android:textSize="20sp"
                android:text="Contacts"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/detail_contacts_edit"
                android:text="BeispielText"
                android:textColor="@color/colorPrimary"/>

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/detail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_marginTop="430dp"
        app:layout_constraintTop_toTopOf="@+id/detail_TableLayout" />


</android.support.constraint.ConstraintLayout>
