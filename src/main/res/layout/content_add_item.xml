<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.eduard.myapplication.AddItem"
    tools:showIn="@layout/activity_add_item">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">

            <TextView
                android:id="@+id/add_name"
                android:textSize="20sp"
                android:text="Name"/>

            <EditText
                android:id="@+id/add_name_edit"
                android:text="EditName"
                />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">

            <TextView
                android:id="@+id/add_description"
                android:textSize="20sp"
                android:layout_width="180dp"
                android:text="Description"/>

            <EditText
                android:id="@+id/add_description_edit"
                android:layout_width="180dp"
                android:text="EditDescription"
                />
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/add_expiredate"
                android:textSize="20sp"
                android:text="ExpireDate"/>

            <EditText
                android:id="@+id/add_expiredate_edit"
                android:text="EditExpireDate"
                />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/add_expiretime"
                android:textSize="20sp"
                android:text="ExpireTime"/>

            <EditText
                android:id="@+id/add_expiretime_edit"
                android:text="EditExpireTime"
                />

        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="5dip">
            <TextView
                android:id="@+id/add_favourite"
                android:textSize="20sp"
                android:text="Favourite"/>

            <Switch android:id="@+id/add_favourite_edit" />

        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/add_adding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="325dp" />


</android.support.constraint.ConstraintLayout>
