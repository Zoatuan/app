<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dip">

    <TextView
        android:id="@+id/item_textview"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Neuer Eintrag\nuntil 19.06.2017"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/item_switch_done"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="done:"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_switch_favourite"
        android:layout_toEndOf="@+id/item_switch_favourite" />

    <Switch
        android:id="@+id/item_switch_favourite"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="favourite:"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/item_textview"
        android:layout_toEndOf="@+id/item_textview" />

</RelativeLayout>